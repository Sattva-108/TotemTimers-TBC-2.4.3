	<Scripts>
		<OnLoad>
			this.name = "TotemTimers "..tostring(GetAddOnMetadata("TotemTimers", "Version"))
			this.collapsed = true
			InterfaceOptions_AddCategory(this)
			this:RegisterEvent("PLAYER_REGEN_DISABLED")
		</OnLoad>
		<OnShow>
			TotemTimers_LastGUIPane = this
		</OnShow>
		<OnEvent>
			InterfaceOptionsFrame:Hide()
		</OnEvent>
